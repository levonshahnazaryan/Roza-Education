<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/OwlCarousel2-2.3.4/dist/assets/owl.carousel.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/OwlCarousel2-2.3.4/dist/assets/owl.theme.default.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/style.min.css" asp-append-version="true">
</head>
<body>
    <header>
        <div class="header_box">
            <a href="/" class="left_box">
                <img src="~/images/logo.png" alt="Project">
            </a>
            <div class="right_box">
                <a href="/" class="activeMenu">Գլխավոր էջ</a>
                <a href="#">Դասավանդում</a>
                <a href="#">Դպրոցի մասին</a>
                <div class="headerLine"></div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="btnLogin">
                        <a asp-controller="Account" asp-action="AboutUs">
                            <div></div>
                        </a>
                    </div>
                }
                else
                {
                    <div class="btnLogin">
                        <div></div>
                    </div>
                }
            </div>
        </div>
        <div class="login_box">
            <div class="triangle"></div>
            <form id="form-login" asp-antiforgery="true" method="post" autocomplete="off">
                <div class="input_wrp">
                    <input autocomplete="off" type="text" name="UserName" id="UserName" placeholder="Ծածկանուն" autocapitalize="false">
                </div>
                <div class="input_wrp">
                    <input autocomplete="off" type="password" name="PassWord" id="PassWord" placeholder="Ծածկագիր">
                </div>
                <p class="login_error"></p>
                <button class="loginBtn">Մուտք</button>
            </form>
        </div>
    </header>
