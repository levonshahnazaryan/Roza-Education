<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/devextreme/dx.common.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/devextreme/dx.light.compact.css" rel="stylesheet" id="theme" data-url="/css/devextreme/" />
    <link rel="stylesheet" media="all" href="~/css/style.min.css" asp-append-version="true">
</head>
<body>
    @await Html.PartialAsync("_Scripts")
    <div class="wrapper">
        @await Html.PartialAsync("_Menu")
        <div class="content">
            @await Html.PartialAsync("_Header")
            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    @(Html.DevExtreme().LoadPanel()
        .ID("loadPanel")
        .ShadingColor("rgba(0,0,0,0.4)")
        .Visible(false)
        .ShowIndicator(true)
        .ShowPane(true)
        .Shading(true)
        .CloseOnOutsideClick(false)
    )

    <div>
        @(Html.DevExtreme().Toast()
            .ID("ToastExeption")
            .DisplayTime(5000)
        )
    </div>
</body>
</html>