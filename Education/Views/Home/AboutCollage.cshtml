@using Education.Models.Account
@model AboutCollageVM

@{
    ViewData["Title"] = "Գրադարան";
    Layout = "_Layout";
}

<div class="about_content">
    <div class="about_right_box">
        <div class="about_title_box">
            <p class="about_title_first">ԳՐԱԴԱՐԱՆ</p>
            <p class="about_title_last">ԳՐԱԴԱՐԱՆ</p>
        </div>
        @Html.Raw(Model.GetAboutCollage.UContent)
    </div>
</div>
<div class="file_content">
    @foreach (var item in Model.GetAboutFiles)
    {
        <div class="file_box">
            <a href="~/Resources/AboutFiles/@item.FileName" download>@item.FileName</a>
        </div>
    }
</div>